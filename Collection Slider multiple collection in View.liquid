{%- liquid
  assign section_id = 'trending-categories-' | append: section.id
  assign slider_id = 'swiper-' | append: section.id
  assign prev_btn_id = 'prev-btn-' | append: section.id
  assign next_btn_id = 'next-btn-' | append: section.id
    assign show_navigation = section.settings.show_navigation | default: false
-%}

<div class="trending-categories-wrapper" id="{{ section_id }}">
  <div class="trending-categories-container">
    
    {%- if section.settings.heading != blank -%}
      <div class="trending-categories-header">
        <h2 class="main-title">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <div class="trending-categories-slider-wrapper">
      <!-- Navigation buttons -->
      <button class="trending-nav-btn trending-nav-prev" id="{{ prev_btn_id }}" aria-label="Previous slide" style="{% if show_navigation %} display: flex; {% else %} display:none; {% endif %}">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="swiper trending-categories-swiper" id="{{ slider_id }}">
        <div class="swiper-wrapper">
          {%- for block in section.blocks -%}
            {%- liquid
              assign collection = collections[block.settings.collection]
              assign image = block.settings.custom_image | default: collection.featured_image
              assign title = block.settings.custom_title | default: collection.title
              assign url = block.settings.custom_url | default: collection.url
            -%}
            
            <div class="swiper-slide trending-category-slide" {{ block.shopify_attributes }}>
              <a href="{{ url }}" class="trending-category-card">
                <div class="trending-category-image-wrapper">
                  {%- if image != blank -%}
                    <img 
                      src="{{ image | img_url: '400x400' }}"
                      alt="{{ title | escape }}"
                      class="trending-category-image"
                      loading="lazy"
                      width="400"
                      height="400"
                    >
                  {%- else -%}
                    <div class="trending-category-placeholder">
                      <svg width="60" height="60" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
                        <circle cx="8.5" cy="8.5" r="1.5" stroke="currentColor" stroke-width="2"/>
                        <polyline points="21,15 16,10 5,21" stroke="currentColor" stroke-width="2"/>
                      </svg>
                    </div>
                  {%- endif -%}
                </div>
                
                <div class="trending-category-content">
                  <h3 class="trending-category-title">{{ title }}</h3>
                </div>
              </a>
            </div>
          {%- endfor -%}
        </div>
      </div>

      <button class="trending-nav-btn trending-nav-next" id="{{ next_btn_id }}" aria-label="Next slide" style="{% if show_navigation %} display: flex; {% else %} display:none; {% endif %}">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  </div>
</div>

<style>
  #{{ section_id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    
  }

 
 #{{ section_id }} .trending-categories-slider-wrapper {
    position: relative;
      background-color: #F8F8F8; 
    border: 1px solid #e4dfdf;
    padding: 20px 35px;
    border-radius: 8px;

}
 .trending-categories-swiper   .swiper-slide  {
    max-width: 300px !important;
}

.trending-category-image-wrapper {
    border-radius: 8px;
    overflow: hidden;
}

.trending-category-image{
transition:ease .3s;
}

.trending-category-image:hover {
transform:scale(1.05);
}

  #{{ section_id }} .trending-categories-container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
  
  }

  #{{ section_id }} .trending-categories-header {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: {{ section.settings.heading_margin_bottom }}px;
  }

 
  #{{ section_id }} .trending-categories-slider-wrapper {
    position: relative;
  }

  #{{ section_id }} .trending-nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    width: 43px;
    height: 35px;
    border-radius: 28%;
    border: none;
    background: {{ section.settings.nav_button_bg }};
    color: {{ section.settings.nav_button_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  #{{ section_id }} .trending-nav-btn:hover {
    background: {{ section.settings.nav_button_bg_hover }};
    color: {{ section.settings.nav_button_color_hover }};
    transform: translateY(-50%) scale(1.1);
  }

  #{{ section_id }} .trending-nav-prev {
    left: -24px;
  }

  #{{ section_id }} .trending-nav-next {
    right: -24px;
  }

  #{{ section_id }} .trending-category-card {
    display: block;
    text-decoration: none;
    color: inherit;
    overflow: hidden;
    transition: all 0.3s ease;
    height: 100%;
  }

  #{{ section_id }} .trending-category-content {
    padding: {{ section.settings.card_padding }}px;
    text-align: {{ section.settings.card_text_alignment }};
  }

  #{{ section_id }} .trending-category-title {
    font-size: {{ section.settings.card_title_size }}px;
    font-weight: {{ section.settings.card_title_weight }};
    color: {{ section.settings.card_title_color }};
    margin: 0;
    line-height: 1.3;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    #{{ section_id }} .trending-nav-btn {
      width: 36px;
      height: 36px;
    }
    
    #{{ section_id }} .trending-nav-prev {
      left: -5px;
    }
    
    #{{ section_id }} .trending-nav-next {
      right: -5px;
    }
    
    #{{ section_id }} .trending-nav-btn svg {
      width: 18px;
      height: 18px;
    }
    
    #{{ section_id }} .trending-categories-container {
      padding: 0 15px;
    }

   
    .trending-categories-swiper .swiper-slide {
      max-width: none !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiper{{ section.id }} = new Swiper('#{{ slider_id }}', {
      slidesPerView: {{ section.settings.slides_mobile }},
      spaceBetween: {{ section.settings.slide_spacing }},
      loop: {{ section.settings.enable_loop }},
      autoplay: {{ section.settings.enable_autoplay }} ? {
        delay: {{ section.settings.autoplay_delay }},
        disableOnInteraction: false,
      } : false,
      navigation: {
        nextEl: '#{{ next_btn_id }}',
        prevEl: '#{{ prev_btn_id }}',
      },
      breakpoints: {
        480: {
          slidesPerView: 2,
        },
        768: {
          slidesPerView: {{ section.settings.slides_tablet }},
        },
        1024: {
          slidesPerView: {{ section.settings.slides_desktop }},
        },
        1200: {
          slidesPerView: {{ section.settings.slides_large_desktop }},
        }
      }
    });
  });
</script>

