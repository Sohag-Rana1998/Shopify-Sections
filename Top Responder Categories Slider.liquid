

<div class="unique-category-slider-wrapper-{{ section.id }}">
  <div class="unique-slider-container-{{ section.id }}">
    {% if section.settings.heading != blank %}
      <h2 class="main-title">{{ section.settings.heading }}</h2>
    {% endif %}
    
    <div class="swiper unique-category-swiper-{{ section.id }}" id="uniqueCategorySwiper{{ section.id }}">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="unique-slide-card-{{ section.id }}">
              {% if block.settings.image != blank %}
                <div class="unique-slide-bg-{{ section.id }}">
                  <img src="{{ block.settings.image | img_url: '600x400' }}" 
                       alt="{{ block.settings.image.alt | default: block.settings.title }}"
                       loading="lazy"
                       class="unique-bg-image-{{ section.id }}">
                </div>
              {% endif %}
              {% comment %} style="background: linear-gradient(135deg, {{ block.settings.overlay_color_1 }}, {{ block.settings.overlay_color_2 }});" {% endcomment %}
              <div class="unique-slide-overlay-{{ section.id }}" 
                   >
                <div class="unique-slide-content-{{ section.id }}">
                  {% if block.settings.title != blank %}
                    <h3 class="unique-slide-heading-{{ section.id }}">{{ block.settings.title }}</h3>
                  {% endif %}
                  {% if block.settings.subtitle != blank %}
                    <p class="unique-slide-sub-{{ section.id }}">{{ block.settings.subtitle }}</p>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <p class="unique-slide-desc-{{ section.id }}">{{ block.settings.description }}</p>
                  {% endif %}
                </div>
              </div>
              
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" 
                   class="unique-slide-link-{{ section.id }}" 
                   aria-label="{{ block.settings.title }}"></a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
      
      <!-- Unique Navigation arrows -->
      {% if section.settings.show_arrows %}
        <div class="swiper-button-next unique-nav-next-{{ section.id }}"></div>
        <div class="swiper-button-prev unique-nav-prev-{{ section.id }}"></div>
      {% endif %}
      
      <!-- Unique Pagination dots -->
      {% if section.settings.show_pagination %}
        <div class="swiper-pagination unique-pagination-{{ section.id }}"></div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .unique-category-slider-wrapper-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    {% comment %} background-color: {{ section.settings.background_color }}; {% endcomment %}
    position: relative;
    z-index: 1;
  }
  .unique-category-slider-wrapper-{{ section.id }} .swiper-slide  {
    max-width: 400px;
}
  .unique-slider-container-{{ section.id }} {
    max-width: 1200px;
    margin: 0 auto;
   
  }
  
  
  .unique-category-swiper-{{ section.id }} {

    position: relative;
  }
  
  .unique-category-swiper-{{ section.id }} .swiper-slide {
    height: auto;
  }
  
  .unique-slide-card-{{ section.id }} {
    position: relative;
    height: 188px;
    cursor: pointer;
  }
  
  .unique-slide-card-{{ section.id }}:hover {
 
  }
  
  .unique-slide-bg-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .unique-bg-image-{{ section.id }} {
    width: 100%;
    height: 94%;
    object-fit: contain;
     
  }
  
 
  .unique-slide-overlay-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.92;
  }
  
  .unique-slide-content-{{ section.id }}{
    text-align: right;
    color: white;
    padding: 0px 30px 10px 0;
    width: 54%;
    margin-left: auto;
    margin-top: 15px;
}
 
  
  .unique-slide-heading-{{ section.id }} {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 0px;
 color:white;
    line-height: 1.2;
  }
  
  .unique-slide-sub-{{ section.id }} {
 font-size: 1rem;
 
    color: white;
     
    font-weight: 500;
    line-height: normal;
    margin-top: 8px;
  }
  
  .unique-slide-desc-{{ section.id }} {
    font-size: 0.95rem;
  
    color:white;
    line-height: 1.4;
    font-weight: 400;
  }
  
  .unique-slide-link-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
    text-decoration: none;
  }
  
  /* Unique Swiper Navigation Styles */
  .unique-category-swiper-{{ section.id }} .unique-nav-next-{{ section.id }},
  .unique-category-swiper-{{ section.id }} .unique-nav-prev-{{ section.id }} {
    color: {{ section.settings.arrow_color }};
    background: rgba(255, 255, 255, 0.95);
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-top: -25px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }
  
  .unique-category-swiper-{{ section.id }} .unique-nav-next-{{ section.id }}:hover,
  .unique-category-swiper-{{ section.id }} .unique-nav-prev-{{ section.id }}:hover {
    background: rgba(255, 255, 255, 1);
    transform: scale(1.1);
  }
  
  .unique-category-swiper-{{ section.id }} .unique-nav-next-{{ section.id }}:after,
  .unique-category-swiper-{{ section.id }} .unique-nav-prev-{{ section.id }}:after {
    font-size: 20px;
    font-weight: bold;
  }
  
  .unique-category-swiper-{{ section.id }} .unique-pagination-{{ section.id }} {
    bottom: -50px;
  }
  
  .unique-category-swiper-{{ section.id }} .unique-pagination-{{ section.id }} .swiper-pagination-bullet {
    background: {{ section.settings.pagination_color }};
    opacity: 0.4;
    width: 12px;
    height: 12px;
    margin: 0 6px;
    transition: all 0.3s ease;
  }
  
  .unique-category-swiper-{{ section.id }} .unique-pagination-{{ section.id }} .swiper-pagination-bullet-active {
    opacity: 1;
    transform: scale(1.2);
  }
  
  /* Mobile Responsive Styles */
  @media (max-width: 768px) {
    
    
    .unique-slide-card-{{ section.id }} {
      height: 200px;
    }


      .unique-slide-content-{{ section.id }}{
   
    width: 46%;
 
}
    
    .unique-slide-heading-{{ section.id }} {
      font-size: 1.9rem;
    }
    
    .unique-slide-sub-{{ section.id }} {
      font-size: 1rem;
    }
    
    .unique-slide-desc-{{ section.id }} {
      font-size: 0.9rem;
    }
    
    .unique-slider-container-{{ section.id }} {
      padding: 0 15px;
    }
    
    .unique-category-swiper-{{ section.id }} .unique-nav-next-{{ section.id }},
    .unique-category-swiper-{{ section.id }} .unique-nav-prev-{{ section.id }} {
      width: 44px;
      height: 44px;
      margin-top: -22px;
    }
    
    .unique-category-swiper-{{ section.id }} .unique-nav-next-{{ section.id }}:after,
    .unique-category-swiper-{{ section.id }} .unique-nav-prev-{{ section.id }}:after {
      font-size: 16px;
    }
  }
  
  @media (max-width: 480px) {
    .unique-slide-card-{{ section.id }} {
      height: 250px;
    }
    
    .unique-slide-heading-{{ section.id }} {
      font-size: 1.8rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Unique Swiper instance with section-specific ID
    const uniqueCategorySwiper{{ section.id }} = new Swiper('#uniqueCategorySwiper{{ section.id }}', {
      slidesPerView: 1,
      spaceBetween: 20,
      loop: {{ section.settings.loop }},
      grabCursor: true,
      centeredSlides: false,
      
      autoplay: {{ section.settings.autoplay }} ? {
        delay: {{ section.settings.autoplay_delay }},
        disableOnInteraction: false,
        pauseOnMouseEnter: true,
      } : false,
      
      breakpoints: {
        768: {
          slidesPerView: 3,
          spaceBetween: 30,
        },
        1024: {
          slidesPerView: 3,
          spaceBetween: 30,
        }
      },
      
      {% if section.settings.show_arrows %}
      navigation: {
        nextEl: '.unique-category-swiper-{{ section.id }} .unique-nav-next-{{ section.id }}',
        prevEl: '.unique-category-swiper-{{ section.id }} .unique-nav-prev-{{ section.id }}',
      },
      {% endif %}
      
      {% if section.settings.show_pagination %}
      pagination: {
        el: '.unique-category-swiper-{{ section.id }} .unique-pagination-{{ section.id }}',
        clickable: true,
        dynamicBullets: true,
      },
      {% endif %}
      
      // Smooth transitions
      speed: 600,
      effect: 'slide',
      
      // Touch settings
      touchRatio: 1,
      touchAngle: 45,
      simulateTouch: true,
      
      // Prevent clicks during transition
      preventClicks: true,
      preventClicksPropagation: true,
    });
    
    // Optional: Add custom event listeners for this specific slider
    uniqueCategorySwiper{{ section.id }}.on('slideChange', function () {
      console.log('Unique Category Slider {{ section.id }} changed to slide:', this.activeIndex);
    });
  });
</script>

{% schema %}
{
  "name": "Unique Category Slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Top First Responder Categories"
    },
    
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 60
    },
    {
      "type": "header",
      "content": "Slider Configuration"
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Enable Infinite Loop",
      "default": true,
      "info": "Allows continuous sliding"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable Autoplay",
      "default": false,
      "info": "Automatically advance slides"
    },
    {
      "type": "range",
      "id": "autoplay_delay",
      "min": 2000,
      "max": 9000,
      "step": 500,
      "unit": "ms",
      "label": "Autoplay Delay",
      "default": 5000,
      "info": "Time between slide transitions"
    },
    {
      "type": "header",
      "content": "Navigation Controls"
    },
    {
      "type": "checkbox",
      "id": "show_arrows",
      "label": "Show Navigation Arrows",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": "Show Pagination Dots",
      "default": true
    },
    {
      "type": "color",
      "id": "arrow_color",
      "label": "Arrow Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "pagination_color",
      "label": "Pagination Color",
      "default": "#333333"
    }
  ],
  "blocks": [
    {
      "type": "category_slide",
      "name": "Category Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image",
          "info": "Recommended size: 600x400px"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Category Name",
          "placeholder": "e.g., Firefighter Supply"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Product Types",
          "placeholder": "e.g., Fireman Axes, Hoses"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Additional Info",
          "placeholder": "e.g., & Safety Training"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category Link URL",
          "info": "Link to category page or collection"
        },
        {
          "type": "header",
          "content": "Overlay Colors"
        },
        {
          "type": "color",
          "id": "overlay_color_1",
          "label": "Gradient Start Color",
          "default": "#ff4444",
          "info": "Left/top color of gradient"
        },
        {
          "type": "color",
          "id": "overlay_color_2",
          "label": "Gradient End Color",
          "default": "#cc0000",
          "info": "Right/bottom color of gradient"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Unique Category Slider",
      "blocks": [
        {
          "type": "category_slide",
          "settings": {
            "title": "Firefighter Supply",
            "subtitle": "Fireman Axes, Hoses",
            "description": "& Safety Training",
            "overlay_color_1": "#ff4444",
            "overlay_color_2": "#cc0000"
          }
        },
        {
          "type": "category_slide",
          "settings": {
            "title": "Medical Supply",
            "subtitle": "First Aid Kits, AED",
            "description": "Stretchers & Homecare",
            "overlay_color_1": "#4488ff",
            "overlay_color_2": "#0066cc"
          }
        },
        {
          "type": "category_slide",
          "settings": {
            "title": "Correctional Supply",
            "subtitle": "Prison Benches,",
            "description": "Correctional Seating",
            "overlay_color_1": "#333366",
            "overlay_color_2": "#1a1a33"
          }
        }
      ]
    }
  ]
}
