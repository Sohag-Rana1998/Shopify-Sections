{% schema %}
{
  "name": "Testimonial Slider",
  "tag": "section",
  "class": "testimonial-slider-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Over 3 Million Happy Customers"
    },
    {
      "type": "range",
      "id": "average_rating",
      "min": 1,
      "max": 5,
      "step": 0.1,
      "label": "Average Rating",
      "default": 4.7
    },
    {
      "type": "image_picker",
      "id": "profiles1",
      "label": "profile image"
    },
    {
      "type": "image_picker",
      "id": "profiles2",
      "label": "profile image"
    },
    {
      "type": "image_picker",
      "id": "profiles3",
      "label": "profile image"
    },
    {
      "type": "image_picker",
      "id": "profiles4",
      "label": "profile image"
    },
    {
      "type": "image_picker",
      "id": "profiles5",
      "label": "profile image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#C8E95D"
    },
    {
      "type": "select",
      "id": "color_mode",
      "label": "Color Mode",
      "options": [
