{% comment %}
    Features Section
  Premium modern design with full customization options
{% endcomment %}

<style>
  .wudu-features-section {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background: {{ section.settings.background_color }};
  }

  .wudu-features-container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .wudu-features-header {
    text-align: center;
    margin-bottom: {{ section.settings.header_margin_bottom }}px;
    animation: fadeInUp 0.8s ease-out;
  }

  .wudu-features-heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .wudu-features-subtext {
    font-size: {{ section.settings.subtext_size }}px;
    color: {{ section.settings.subtext_color }};
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
    font-weight: 400;
  }

  .wudu-features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ section.settings.grid_gap }}px;
    margin-top: 0;
  }

  .wudu-feature-card {
    background: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid {{ section.settings.card_border_color }};
    position: relative;
    overflow: hidden;
    animation: fadeInUp 0.8s ease-out backwards;
  }

  .wudu-feature-card:nth-child(1) { animation-delay: 0.1s; }
  .wudu-feature-card:nth-child(2) { animation-delay: 0.2s; }
  .wudu-feature-card:nth-child(3) { animation-delay: 0.3s; }

  .wudu-feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: {{ section.settings.card_accent_color }};
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .wudu-feature-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    border-color: {{ section.settings.card_accent_color }};
  }

  .wudu-feature-card:hover::before {
    transform: scaleX(1);
  }

  .wudu-feature-icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    background: {{ section.settings.icon_background }};
    border-radius: {{ section.settings.icon_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 24px;
    transition: all 0.4s ease;
  }

  .wudu-feature-card:hover .wudu-feature-icon {
    transform: scale(1.1) rotate(5deg);
    background: {{ section.settings.card_accent_color }};
  }

  .wudu-feature-icon svg {
    width: {{ section.settings.icon_size | divided_by: 1.8 }}px;
    height: {{ section.settings.icon_size | divided_by: 1.8 }}px;
    fill: {{ section.settings.icon_color }};
    transition: fill 0.4s ease;
  }

  .wudu-feature-card:hover .wudu-feature-icon svg {
    fill: #ffffff;
  }

  .wudu-feature-title {
    font-size: {{ section.settings.feature_title_size }}px;
    font-weight: {{ section.settings.feature_title_weight }};
    color: {{ section.settings.feature_title_color }};
    margin: 0 0 12px;
    line-height: 1.3;
  }

  .wudu-feature-description {
    font-size: {{ section.settings.feature_description_size }}px;
    color: {{ section.settings.feature_description_color }};
    line-height: 1.6;
    margin: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .wudu-features-heading {
      font-size: {{ section.settings.heading_size | times: 0.7 }}px;
    }

    .wudu-features-subtext {
      font-size: {{ section.settings.subtext_size | times: 0.9 }}px;
    }

    .wudu-features-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .wudu-feature-card {
      padding: 32px 24px;
    }
  }
</style>

<section class="wudu-features-section">
  <div class="wudu-features-container">
    
    {% if section.settings.show_header %}
    <div class="wudu-features-header">
      {% if section.settings.heading != blank %}
        <h2 class="wudu-features-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.subtext != blank %}
        <p class="wudu-features-subtext">{{ section.settings.subtext }}</p>
      {% endif %}
    </div>
    {% endif %}

    <div class="wudu-features-grid">
      {% for block in section.blocks %}
        <div class="wudu-feature-card" {{ block.shopify_attributes }}>
          
          <div class="wudu-feature-icon">
            {% if block.settings.icon == 'smart_design' %}
              <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14zm-7-2h2v-4h4v-2h-4V7h-2v4H8v2h4z"/>
              </svg>
            {% elsif block.settings.icon == 'splash_free' %}
              <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
                <circle cx="12" cy="12" r="2"/>
              </svg>
            {% elsif block.settings.icon == 'compact' %}
              <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M21 3H3v18h18V3zm-2 16H5V5h14v14zm-2-2H7V7h10v10z"/>
              </svg>
            {% elsif block.settings.custom_icon != blank %}
              {{ block.settings.custom_icon }}
            {% endif %}
          </div>

          <h3 class="wudu-feature-title">{{ block.settings.title }}</h3>
          <p class="wudu-feature-description">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>

  </div>
</section>

