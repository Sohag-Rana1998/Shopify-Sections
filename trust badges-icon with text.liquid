{% comment %}
  Trust Badges Section
  Premium modern design with full customization via Shopify editor
{% endcomment %}

<style>
  .trust-badges-section {
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
  
  .trust-badges-container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .trust-badges-title {
    text-align: center;
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin-bottom: 48px;
    letter-spacing: -0.02em;
  }
  
  .trust-badges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 32px;
    align-items: stretch;
  }
  
  @media (min-width: 768px) {
    .trust-badges-grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    }
  }
  
  @media (max-width: 767px) {
    .trust-badges-grid {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      gap: 16px;
      padding-bottom: 10px;
    }
    .trust-badge {
    min-height: 300px;
}
    .trust-badges-grid::-webkit-scrollbar {
      display: none;
    }
  }
  
  .trust-badge {
    text-align: {{ section.settings.text_align }};
    padding: {{ section.settings.badge_padding }}px;
    background: {{ section.settings.badge_background }};
    border-radius: {{ section.settings.border_radius }}px;
    transition: all 0.3s ease;
    border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
    box-shadow: {{ section.settings.shadow_enabled | default: false | append: '' }};
    {% if section.settings.shadow_enabled %}
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    {% endif %}
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  @media (max-width: 767px) {
    .trust-badge {
      flex: 0 0 calc(100% - 60px);
      scroll-snap-align: start;
      scroll-snap-stop: always;
    }
    .trust-badge {
    min-height: 335px;
}
  }
  
  .trust-badge:hover {
    transform: {{ section.settings.hover_effect }};
    {% if section.settings.shadow_enabled %}
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    {% endif %}
  }
  
  .trust-badge-icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin: 0 auto {{ section.settings.icon_spacing }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ section.settings.icon_background }};
    border-radius: 50%;
    color: {{ section.settings.icon_color }};
  }
  
  .trust-badge-icon svg {
    width: {{ section.settings.icon_size | divided_by: 1.8 }}px;
    height: {{ section.settings.icon_size | divided_by: 1.8 }}px;
    stroke-width: 2;
  }
  
  .trust-badge-title {
    font-size: {{ section.settings.badge_title_size }}px;
    font-weight: {{ section.settings.badge_title_weight }};
    color: {{ section.settings.badge_title_color }};
    margin-bottom: 12px;
    line-height: 1.3;
    flex-shrink: 0;
  }
  
  .trust-badge-text {
    font-size: {{ section.settings.badge_text_size }}px;
    color: {{ section.settings.badge_text_color }};
    line-height: 1.6;
    margin: 0;
    flex-grow: 1;
  }
</style>

<div class="trust-badges-section">
  <div class="trust-badges-container">
    {% if section.settings.show_title %}
      <h2 class="trust-badges-title">{{ section.settings.section_title }}</h2>
    {% endif %}
    
    <div class="trust-badges-grid">
      {% for block in section.blocks %}
        <div class="trust-badge" {{ block.shopify_attributes }}>
          <div class="trust-badge-icon">
            {% case block.settings.icon %}
              {% when 'medal' %}
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              {% when 'shield' %}
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
              {% when 'refresh' %}
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
                </svg>
              {% when 'truck' %}
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
                </svg>
              {% when 'headset' %}
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
            {% endcase %}
          </div>
          
          <h3 class="trust-badge-title">{{ block.settings.title }}</h3>
          <p class="trust-badge-text">{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

