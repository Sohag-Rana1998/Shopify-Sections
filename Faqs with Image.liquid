<section class="faq-section">
  <div class="container-custom-faq">
    <div style=" margin-bottom:25px;">
      <h2 class="section-header-faq">{{ section.settings.section_heading }}</h2>
    </div>
<div class="faq-image-text-container {% if section.settings.image_position == 'left' %}image-left{% else %}image-right{% endif %}">
  <div class="faq-wrapper">
    <ul class="accordion">
      {% for block in section.blocks %}
        {% if block.type == 'faq_item' %}
          <li {{ block.shopify_attributes }}>
            <div class="accordion-header">
              <strong>{{ block.settings.question }}</strong>
              <span class="toggle-icon">
                <svg width="14" height="14" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <line x1="12" y1="5" x2="12" y2="19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                  <line x1="5" y1="12" x2="19" y2="12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
              </span>
            </div>
            <div class="accordion-content">
              <div class="rte">{{ block.settings.answer }}</div>
            </div>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
  
  {% if section.settings.faq_image != blank %}
    <div class="faq-image">
      <img src="{{ section.settings.faq_image | img_url: '800x' }}" alt="FAQ Image" width='800' height="600" />
    </div>
  {% endif %}
</div>


  </div>
</section>

<style>
  .faq-section {
    padding: 60px 0;
  
  }

  .container-custom-faq {
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
  }
.faq-image-text-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 30px;
}

.faq-wrapper {
  width: 50%;
}

.faq-image {
  width: 50%;
}

.faq-image img {
    width: 100%;
    height: 430px;
    display: block;
    border-radius: 10px;
    object-fit: cover;
}



.accordion-content   p {
    font-size: .9rem !important;
}
.faq-image-text-container.image-left {
  flex-direction: row-reverse; /* Image on the left */
}

.faq-image-text-container.image-right {
  flex-direction: row; /* Image on the right */
}

/* âœ… Mobile - Stack image on top */
@media screen and (max-width: 768px) {
  .faq-image-text-container {
    flex-direction: column;
    gap: 20px;
  }

  .faq-wrapper,
  .faq-image {
    width: 100%;
  }
}


  
  .section-header-faq {
    text-align: center;
    margin-bottom: 40px;
    font-size:2.6rem;
    text-transform:capitalize !important;
    text-align:center !important;
    margin:0 auto;
    display:block;
   
  }

  .section-header h2 {
    font-size: 2.2em;
    font-weight: 500;
    color: #2a2a2a;
    margin-bottom: 15px;
    position: relative;
    display: inline-block;
  }

  .section-header h2:after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background-color: #3a3a3a;
  }

  .faq-wrapper {
   
    border-radius: 10px;
   
    overflow: hidden;
   
    margin: 0 auto;
  }

  .accordion {
    list-style: none;
    padding: 0;
    margin: 0;
  }


  .accordion li {
    border: 1px solid #d0b4b4;
    margin-bottom: 15px;
    border-radius: 10px;
    
}
.rte p{
  font-size:1.2rem;
}
 

  .accordion-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 25px;
    cursor: pointer;
    transition: all 0.3s ease;
    background-color: #fff;
     border-radius: 10px;
  }

  .accordion-header:hover {
    background-color: #f9f9f9;
  }

.accordion-header strong {
    font-weight: 700;
    color: #333;
    font-size: 1rem;
    flex-grow: 1;
}

 
  

  .toggle-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    transition: transform 0.3s ease;
  }

.toggle-icon  svg {
    width: 1rem;
    height: 1rem;
}
  .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
     
     border-radius: 10px;
  }

  .accordion-content .rte {
    padding: 20px 25px;
    margin: 0;
    line-height: 1.6;
    color: #666;
  }
  
  .accordion-content .rte p {
    margin: 0 0 1em 0;
  }
  
  .accordion-content .rte p:last-child {
    margin-bottom: 0;
  }

  .active .toggle-icon {
    transform: rotate(45deg);
    color: #000;
  }

  .active + .accordion-content {
    max-height: 300px;
  }

  .active {
    background-color: #f7f7f7;
  }


                      
  /* Responsive Design */
  @media screen and (max-width: 768px) {
    .faq-section {
      padding: 40px 0;
    }
    
    .section-header h2 {
      font-size: 1.8rem;
    }

    .accordion-header {
      padding: 15px 20px;
    }

    .accordion-header strong {
      font-size: 1em;
    }

    .accordion-content p {
      padding:0px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const accordionHeaders = document.querySelectorAll('.accordion-header');
    
    accordionHeaders.forEach(header => {
      header.addEventListener('click', function() {
        // Toggle active class on the clicked header
        this.classList.toggle('active');
        
        // Get the content panel
        const content = this.nextElementSibling;
        
        // Toggle other panels closed
        if (this.classList.contains('active')) {
          accordionHeaders.forEach(otherHeader => {
            if (otherHeader !== this) {
              otherHeader.classList.remove('active');
              otherHeader.nextElementSibling.style.maxHeight = null;
            }
          });
          
          // Open this panel
          content.style.maxHeight = content.scrollHeight + "px";
        } else {
          // Close this panel
          content.style.maxHeight = null;
        }
      });
    });
  });
</script>

